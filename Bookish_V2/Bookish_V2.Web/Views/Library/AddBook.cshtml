@using Bookish_V2.Web.Models
@model NewBookViewModel
@{
	ViewBag.Title = "Add Book";
}

<h2>Add a new book to the online library</h2>
<div class="row">
	<div class="col-md-8">
		<section id="loginForm">
			@using (Html.BeginForm("AddBook", "Library", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				<h4>You can also add new copies of a book that we already have documented (just make sure to use the correct ISBN).</h4>
				<hr />
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Authors, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Authors, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Authors, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Isbn, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Isbn, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Isbn, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Copies, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Copies, new { @type = "number", @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Copies, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Submit" class="btn btn-default" />
					</div>
				</div>
			}
		</section>
	</div>
</div>
